#: import AsyncImage kivy.uix.image
<CustomCard>:
    orientation: "vertical"
    style: "elevated"
    elevation: 20
    padding: 50, 10
    md_bg_color: app.theme_cls.bg_dark

<VideoListView>:
    text: root.text
    secondary_text: root.secondary_text
    tertiary_text: root.tertiary_text
    on_release:
        app.goto_download(root.obj)

    ImageLeftWidget:
        source: root.img

<DetailCard>:
    padding: 50, 50
    elevation: 30

    MDLabel:
        text: root.title
        font_name: 'assets/fonts/Khmer-Black.ttf'

    MDBoxLayout:
        orientation: "horizontal"
        spacing: 50

        MDBoxLayout:
            AsyncImage:
                source: root.image_url

        MDBoxLayout:
            orientation: "vertical"
            spacing: 5

            MDLabel:
                text: "Author: " + root.author
            MDLabel:
                text: "Views: " + root.views
            MDLabel:
                text: "Publish: " + root.publish_date

<VideoCard>:
    padding: 50, 50
    elevation: 30
    spacing: 20

    MDLabel:
        text: root.title
        font_name: 'assets/fonts/Khmer-Black.ttf'

    MDBoxLayout:
        orientation: "horizontal"
        spacing: 50

        MDBoxLayout:
            size_hint_x: .4
            AsyncImage:
                source: root.image_url
                size_hint: 1, 1

        MDBoxLayout:
            orientation: "vertical"
            spacing: 5

            MDLabel:
                text: "Author: " + root.author
            MDLabel:
                text: "Views: " + root.views
            MDLabel:
                text: "Publish: " + root.publish_date

    MDRaisedButton:
        text: "Download"
        on_release:
            app.goto_download(root.obj)

<RV>:
    viewclass: "VideoListView"
    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        #spacing: 0
        padding: 50, 50
        orientation: 'vertical'

<MainWindow>:
    id: main_win
    orientation: "vertical"

    MDTopAppBar:
        id: toolbar
        title: "Video Downloader"

    ScreenManager:
        id: scrn_mngr

        Screen:
            id: first_page
            name: "first_page"

            MDBoxLayout:
                orientation: "vertical"
                padding: main_win.size[0]/10, main_win.size[1]/4
                spacing: 20

                MDLabel:
                    text: "Video Downloader"
                    halign: "center"
                    font_style: "H3"
                    bold: True

                CustomCard:
                    size_hint_y: None
                    height: self.minimum_height
                    MDTextField:
                        id: search_input
                        hint_text: "Songs, Artists..."
                        #line_color_normal: 0, 0, 0, .5
                        #hint_text_color_normal: 0, 0, 0, .5
                        #icon_right_color_normal: 0, 0, 0, .5
                        icon_right: "magnify"
                        on_text_validate: app.search(self.text)

                AnchorLayout:
                    anchor_x: "center"
                    MDRaisedButton:
                        text: "Search"
                        on_release: app.search(search_input.text)

        Screen:
            id: second_page
            name: "second_page"

            MDBoxLayout:
                orientation: "vertical"
                spacing: 20

                RV:
                    id: rv

                MDFlatButton:
                    text: "Show more"
                    size_hint_x: 1
                    md_bg_color: 0, 0, 0, .25
                    on_release:
                        root.show_more()

        Screen:
            id: third_page
            name: "third_page"

            MDBoxLayout:
                orientation: "vertical"
                padding: 50, main_win.size[1]/4
                spacing: 20

                DetailCard:
                    id: detail_card

                CustomCard:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 20
                    padding: 50, 20

                    MDTextField:
                        id: download_path
                        size_hint_x: .6
                        hint_text: "Select Path"
                        helper_text: "Please Choose Path"
                        helper_text_mode: "on_error"
                        on_focus:
                            root.file_manager_open()

                    AnchorLayout:
                        anchor_y: "center"
                        anchor_x: "center"
                        size_hint_x: .2
                        MDRaisedButton:
                            text: "Choose"
                            size_hint_y: None
                            on_release:
                                root.file_manager_open()

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: 20
                    size_hint_y: None

                    MDRaisedButton:
                        text: "Download Video"
                        size_hint_x: .5
                        on_release:
                            root.download_video(detail_card.obj)

                    MDRaisedButton:
                        text: "Download Audio"
                        size_hint_x: .5
                        on_release:
                            root.download_audio(detail_card.obj)